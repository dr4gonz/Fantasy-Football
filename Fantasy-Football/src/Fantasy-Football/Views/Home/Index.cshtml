@model List<Fantasy_Football.Models.NflGame>
@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/FieldGrass.jpg" alt="Football Grass" class="img-responsive carousel-image" />
            <div class="carousel-caption" role="option">
                <p>
                    Play Fantasy Football on a lightweight mobile platform.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/FootballTexture.jpg" alt="Football Texture" class="img-responsive carousel-image" />
            <div class="carousel-caption" role="option">
                <p>
                    Create and Manage Leagues. Quickly. Easily. Securly.
                    
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>View Leagues</h2>
        <ul>
            <li><a asp-area="" asp-controller="Leagues" asp-action="Index">View Leagues</a></li>
            <li><a asp-area="" asp-controller="Leagues" asp-action="Create">Create Leagues</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Create Teams</h2>
        <ul>
            <li><a asp-area="" asp-controller="Teams" asp-action="Index">View Teams</a></li>
            <li><a asp-area="" asp-controller="Teams" asp-action="Create">Create Teams</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Create Players</h2>
        <ul>
            <li><a asp-area="" asp-controller="Players" asp-action="Index">View Players</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>My Profile</h2>
        <ul>
            <li><a asp-area="" asp-controller="UserNavigation" asp-action="MyLeagues">My Leagues</a></li>
            <li><a asp-area="" asp-controller="UserNavigation" asp-action="MyTeams">My Teams</a></li>
        </ul>
    </div>
</div>
<div class="row">
    <h3>Scores - Week 4</h3>
    @foreach (var game in Model)
    {
        <div class="col-lg-3">
            <table class="table table-striped">
                <tr>
                    <th>
                    </th>
                    <th>
                        Q1
                    </th>
                    <th>
                        Q2
                    </th>
                    <th>
                        Q3
                    </th>
                    <th>
                        Q4
                    </th>
                    <th>
                        OT
                    </th>
                    <th>
                        Final
                    </th>
                </tr>
                <tr>
                    <td>
                        @game.AwayTeam
                    </td>
                    <td>
                        @game.AwayScoreQuarter1
                    </td>
                    <td>
                        @game.AwayScoreQuarter2
                    </td>
                    <td>
                        @game.AwayScoreQuarter3
                    </td>
                    <td>
                        @game.AwayScoreQuarter4
                    </td>
                    <td>
                        @game.AwayScoreOvertime
                    </td>
                    <td>
                        @game.AwayScore
                    </td>
                </tr>
                <tr>
                    <td>
                        @game.HomeTeam
                    </td>
                    <td>
                        @game.HomeScoreQuarter1
                    </td>
                    <td>
                        @game.HomeScoreQuarter2
                    </td>
                    <td>
                        @game.HomeScoreQuarter3
                    </td>
                    <td>
                        @game.HomeScoreQuarter4
                    </td>
                    <td>
                        @game.HomeScoreOvertime
                    </td>
                    <td>
                        @game.HomeScore
                    </td>
                </tr>
            </table>
        </div>

    }
</div>
@Html.Partial("~/Views/News/News.cshtml", await NflNews.GetFeeds())
